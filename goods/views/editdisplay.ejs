<link href="/stylesheets/style.css" rel="stylesheet"/>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">    </head>
   <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
   <script src="/javascripts/project.js"></script> 
   <body>
<form action="/product/submit_products" method="post" enctype="multipart/form-data">
        <div class="maincontainer">
            <div class="box">
                <div class="container">
                    <div class="row">
                        <div class="col-12 headstyle centerstyle">
                           
                            
                            
                            <img src="/images/cart.png" width="35">
                            <span>Product register</span>
                            <a style="margin-left: auto;" href="/product/display"><img  src="/images/list.png"  width="35"></a>
                    
                            
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-12">
                            <hr>
                        </div>
                    </div>
                    <div class="row"><div class="col-4">
                        <select class="form-select" name="categoryid" id="categoryid">
                            <option value="<%=data.categoryid%>"><%=data.categoryname%></option>
                             
                          </select>
                    </div>
                    <div class="col-4">
                        <select class="form-select" name="typeid" id="typeid" >
                            
                            <option value="<%=data.typeid%>"><%=data.typename%></option>
                            
                          </select>
                    </div>
                    <div class="col-4">
                        <select class="form-select" name="brandid" id="Brand">
                           
                            <option value="<%=data.brandid%>"><%=data.brandname%></option>
                           
                          </select>
                    </div></div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-12">
                            <input type="text" value="<%=data.productname%>" class="form-control" name="productname" placeholder="Product Name">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-12">
                        <textarea class="form-control"  placeholder="Product Description ..." name="description"><%=data.description%></textarea>

</div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6">
                            <input type="text" class="form-control" value="<%=data.price%>" name="price" placeholder="Product Price">
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" name="offerprice" value="<%=data.offerprice%>" placeholder="Product Offer Price">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6">
                            <input type="text" value="<%=data.stock%>" class="form-control" name="stock" placeholder="Product Stock">
                        </div>
                        <div class="col-6">
                            <input type="text" value="<%=data.gst%>" class="form-control" name="gst" placeholder="G.S.T.">
                        </div>
                    </div>

                    <%
                    var st=data.gift.split(',')
                    var gift={'Gift':false,'Warranty':false}
                    st.map((item)=>{
                        gift[item]=true
                        
                    })

                    var avl={'continue':false,'discontinue':false}
                    avl[data.status]=true
                    %>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" <%= gift['Gift']?'checked':'' %>  type="checkbox" id="inlineCheckbox1" value="Gift" name="gift">
                                <label class="form-check-label" for="Gift">Gift</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" <%= gift['Warranty']?'checked':'' %> type="checkbox" id="Warranty" value="Warranty" name="gift">
                                <label class="form-check-label" for="Warranty">Warranty</label>
                              </div>
                               </div>
                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" <%= avl['Continue']?'checked':'' %> type="radio" name="status" id="cont" value="Continue">
                                <label class="form-check-label" for="cont">Continued</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" <%= avl['Discontinue']?'checked':'' %> type="radio" name="status" id="Dcont" value="Discontinue">
                                <label class="form-check-label" for="Dcont">Discontinued</label>
                              </div>
                        </div>
                    </div>
                   
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6" style="display: flex; justify-content: center; align-items: center;">
                            <button type="submit" class="btn btn-primary" style="width: 200px;">Edit</button> </div>
                        <div class="col-6"style="display: flex; justify-content: center; align-items: center;">
                            <button type="submit" class="btn btn-primary"style="width: 200px;">Delete</button>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-12" style="display: flex; justify-content: center; align-items: center;">
                         
                        </div>
                            
                    </div>

                        
                    </div>
                </div>

            </div>

        </div>
    </form>
        
    </body>
</html>