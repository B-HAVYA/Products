<link href="/stylesheets/style.css" rel="stylesheet"/>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">    </head>
   <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
   <script src="/javascripts/project.js"></script> 
   <body>
<form action="/product/submit_products" method="post" enctype="multipart/form-data">
        <div class="maincontainer">
            <div class="box">
                <div class="container">
                    <div class="row">
                        <div class="col-12 headstyle centerstyle">
                            
                            
                            <img src="/images/cart.png" width="35">
                            <span>Product register</span>
                            <a style="margin-left: auto;" href="/product/display"><img  src="/images/list.png"  width="35"></a>
                    
                            
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-12">
                            <hr>
                        </div>
                    </div>
                    <div class="row"><div class="col-4">
                        <select class="form-select" name="categoryid" id="categoryid">
                            <option selected>Category</option>
                             
                          </select>
                    </div>
                    <div class="col-4">
                        <select class="form-select" name="typeid" id="typeid" >
                            <option selected>Type</option>
                            
                          </select>
                    </div>
                    <div class="col-4">
                        <select class="form-select" name="brandid" id="Brand">
                            <option selected>Brand</option>
                           
                          </select>
                    </div></div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-12">
                            <input type="text" class="form-control" name="productname" placeholder="Product Name">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-12">
                        <textarea class="form-control" placeholder="Product Description ..." name="description"></textarea>

</div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6">
                            <input type="text" class="form-control" name="price" placeholder="Product Price">
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" name="offerprice" placeholder="Product Offer Price">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6">
                            <input type="text" class="form-control" name="stock" placeholder="Product Stock">
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" name="gst" placeholder="G.S.T.">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Gift" name="gift">
                                <label class="form-check-label" for="Gift">Gift</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="Warranty" value="Warranty" name="gift">
                                <label class="form-check-label" for="Warranty">Warranty</label>
                              </div>
                               </div>
                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="cont" value="Continue">
                                <label class="form-check-label" for="cont">Continued</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="Dcont" value="Discontinue">
                                <label class="form-check-label" for="Dcont">Discontinued</label>
                              </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6">
                            <label for="picture" class="form-label">Upload Product Image :</label>
                            <input accept="image/jpeg,image/png" class="form-control" type="file" id="picture" name="picture"> </div>
                        <div class="col-6 centerstyle" style="display: flex; justify-content: center; align-items: center;" >
                            <img src="/images/img.png" id="productimage" width="60">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-6" style="display: flex; justify-content: center; align-items: center;">
                            <button type="submit" class="btn btn-primary" style="width: 200px;">Submit</button> </div>
                        <div class="col-6"style="display: flex; justify-content: center; align-items: center;">
                            <button type="reset" class="btn btn-primary"style="width: 200px;">Reset</button>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 7px;">
                        <div class="col-12" style="display: flex; justify-content: center; align-items: center;">
                          <%=message %>
                        </div>
                            
                    </div>

                        
                    </div>
                </div>

            </div>

        </div>
    </form>
        
    </body>
</html>