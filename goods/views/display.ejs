<html>
    <link href="/stylesheets/style.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">    
   <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
   <script src="/javascripts/project.js"></script> 
    <body>
        <div class="maincontainertb">

            <div class="boxtable">
                <div class="col-12 headstyle centerstyle">
                            
                    
                    <img src="/images/list.png" width="35">
                    <span>Products</span>
                    <a style="margin-left: auto;" href="/product/productinterface"><img  src="/images/cart.png"  width="35"></a>
                    
                </div>

           
        <%
        if(status){%>

            <table class="table table-info table-striped" style="color: #2c3d51;font-family: 'Comfortaa';font-size: 14px;font-weight: bold;" cellspacing="0">
                
                <thead>
                    <tr><th>sn</th>
                        <th>Category</th>
                        <th>type</th>
                        <th>brand</th>
                        <th>product</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Gst</th>
                        <th>Warranty</th>
                        <th>Availability</th>
                        <th>Picture</th>
                        <th>Update</th>
                    </tr>
                </thead>

                <tbody>
                    <%
                    data.map((item,index)=>{ %>
                        
                   <tr>
                    <td><%=(index+1)%></td>
                    <td><%=item.categoryid%>/<br><%=item.categoryname%></td>
                    <td><%=item.typeid%>/<br><%=item.typename%></td>
                    <td><%=item.brandid%>/<br><%=item.brandname%></td>
                    <td><%=item.productid%>/<%=item.productname%></td>
                    <td><%=item.description%></td>
                    <td><s><%=item.price%></s>/<%=item.offerprice%></td>
                    <td><%=item.stock%></td>
                    <td><%=item.gst%></td>
                    <td><%=item.gift%></td>
                    <td><%=item.status%></td>
                    <td><img src="/images/<%=item.picture%>" width="50"></td>
                    <td><a href="/product/editdisplay?productid=<%=item.productid%>">Edit/Delete</a></td>
                    
                   </tr>
                       <%})%>

                    
                </tbody>
            </table>


            <% }
            else{alert(message)}
        %>
    </div>
</div>
    </body>
</html>